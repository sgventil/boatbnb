<%= render partial: "shared/topsection_banner" %>
<main>
  <div class="main-index">
    <div class="card-grid" id="gridjs">
      <% @boats.each do |boat| %>
        <%= render partial: "shared/boatcard", locals: { boat: boat } %>
      <% end %>
    </div>
    <div class="map-container" id="mapjs">
      <div class="sticky-top sticky-bottom">
        <div data-controller="map" id="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value="<%= @markers.to_json %>" style="width: 100%" class="vh-100"></div>
      </div>
    </div>
    <button id="btn" data-controller="btn" class="btn btn-dark fixed-bottom btn-map">Map</button>
  </div>
</main>
